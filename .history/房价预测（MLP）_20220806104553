import hashlib
import os
import tarfile
import zipfile
import requests
import numpy as np
import pandas as pd
import torch
from torch import nn
from d2l import torch as d2l

# ä¸‹è½½å¹¶è¯»å–Kaggleæ•°æ®é›†---------------------------------------------------------------------------------------
#@save
DATA_HUB = dict()
DATA_URL = 'http://d2l-data.s3-accelerate.amazonaws.com/'
def download(name, cache_dir=os.path.join('..', 'data')):  #@save
    """ä¸‹è½½ä¸€ä¸ªDATA_HUBä¸­çš„æ–‡ä»¶ï¼Œè¿”å›æœ¬åœ°æ–‡ä»¶å"""
    assert name in DATA_HUB, f"{name} ä¸å­˜åœ¨äº {DATA_HUB}"
    url, sha1_hash = DATA_HUB[name]
    os.makedirs(cache_dir, exist_ok=True)
    fname = os.path.join(cache_dir, url.split('/')[-1])
    if os.path.exists(fname):
        sha1 = hashlib.sha1()
        with open(fname, 'rb') as f:
            while True:
                data = f.read(1048576)
                if not data:
                    break
                sha1.update(data)
        if sha1.hexdigest() == sha1_hash:
            return fname  # å‘½ä¸­ç¼“å­˜
    print(f'æ­£åœ¨ä»{url}ä¸‹è½½{fname}...')
    r = requests.get(url, stream=True, verify=True)
    with open(fname, 'wb') as f:
        f.write(r.content)
    return fname
def download_extract(name, folder=None):  #@save
    """ä¸‹è½½å¹¶è§£å‹zip/taræ–‡ä»¶"""
    fname = download(name)
    base_dir = os.path.dirname(fname)
    data_dir, ext = os.path.splitext(fname)
    if ext == '.zip':
        fp = zipfile.ZipFile(fname, 'r')
    elif ext in ('.tar', '.gz'):
        fp = tarfile.open(fname, 'r')
    else:
        assert False, 'åªæœ‰zip/taræ–‡ä»¶å¯ä»¥è¢«è§£å‹ç¼©'
    fp.extractall(base_dir)
    return os.path.join(base_dir, folder) if folder else data_dir
def download_all():  #@save
    """ä¸‹è½½DATA_HUBä¸­çš„æ‰€æœ‰æ–‡ä»¶"""
    for name in DATA_HUB:
        download(name)



DATA_HUB['kaggle_house_train'] = (  #@save
    DATA_URL + 'kaggle_house_pred_train.csv',
    '585e9cc93e70b39160e7921475f9bcd7d31219ce')

DATA_HUB['kaggle_house_test'] = (  #@save
    DATA_URL + 'kaggle_house_pred_test.csv',
    'fa19780a7b011d9b009e8bff8e99922a8ee2eb90')
train_data = pd.read_csv(download('kaggle_house_train'))
test_data = pd.read_csv(download('kaggle_house_test'))
# print(train_data.shape)
# print(test_data.shape)
# print(test_data.iloc[0:4, [0, 1, 2, -3, -2, -1]])
all_features = pd.concat((train_data.iloc[:, 1:-1], test_data.iloc[:, 1:])) # è¦å°†åºå·ç‰¹å¾å’Œè®­ç»ƒé›†çš„æ ‡ç­¾åˆ é™¤åï¼Œè¿æ¥èµ·æ¥ä½œä¸ºæ‰€æœ‰çš„ç‰¹å¾

# æ•°æ®é¢„å¤„ç†---------------------------------------------------------------------------------------
# å¯¹æ•°å­—å‹ç‰¹å¾è¿›è¡Œé¢„å¤„ç†
numeric_features = all_features.dtypes[all_features.dtypes != 'object'].index   # è·å–æ•°å­—å‹ç‰¹å¾çš„åºå·
all_features[numeric_features] = all_features[numeric_features].apply(lambda x: (x - x.mean()) / (x.std())) # æ ¹æ®è®­ç»ƒæ•°æ®æ ‡å‡†åŒ–æ•°æ®
all_features[numeric_features] = all_features[numeric_features].fillna(0)   # å°†ç¼ºå¤±å€¼ç”¨å‡å€¼æ›¿æ¢ï¼ˆåœ¨æ ‡å‡†åŒ–æ•°æ®ä¹‹åï¼Œæ‰€æœ‰å‡å€¼ç”¨0è¡¨ç¤ºï¼Œå› æ­¤æˆ‘ä»¬å¯ä»¥å°†ç¼ºå¤±å€¼è®¾ç½®ä¸º0
# å¯¹ç¦»æ•£å‹ç‰¹å¾é¢„å¤„ç†(å°†ç±»å‹ç‰¹å¾ç”¨å¼ é‡å½¢å¼ï¼ˆç‹¬çƒ­ç¼–ç ï¼‰è¡¨ç¤ºï¼Œè¿™ä¼šä½¿æ ·æœ¬çš„ç‰¹å¾æ•°å˜å¤šï¼‰
# print(all_features.shape)
all_features = pd.get_dummies(all_features, dummy_na=True)  # â€œDummy_na=Trueâ€å°†â€œnaâ€ï¼ˆç¼ºå¤±å€¼ï¼‰è§†ä¸ºæœ‰æ•ˆçš„ç‰¹å¾å€¼ï¼Œå¹¶ä¸ºå…¶åˆ›å»ºæŒ‡ç¤ºç¬¦ç‰¹å¾
# print(all_features.shape)
# ä»pandasæ ¼å¼ä¸­æå–NumPyæ ¼å¼ï¼Œå¹¶å°†å…¶è½¬æ¢ä¸ºå¼ é‡è¡¨ç¤ºç”¨äºè®­ç»ƒ
n_train = train_data.shape[0]
train_features = torch.tensor(all_features[:n_train].values, dtype=torch.float32)
test_features = torch.tensor(all_features[n_train:].values, dtype=torch.float32)
train_labels = torch.tensor(train_data.SalePrice.values.reshape(-1, 1), dtype=torch.float32)

# è®­ç»ƒ---------------------------------------------------------------------------------------
loss = nn.MSELoss()
in_features = train_features.shape[1]
print(in_features)
mid_features = 128
def get_net():
    net = nn.Sequential(nn.Flatten(), nn.Linear(in_features, mid_features), nn.ReLU(), nn.Linear(mid_features, 1))  # ä¸‰å±‚MLP
    return net
# ä½¿ç”¨[ç›¸å¯¹è¯¯å·®]æ¥è¡¨ç¤ºåˆ¤æ–­çš„å‡†ç¡®åº¦
def log_rmse(net, features, labels):
    # ä¸ºäº†åœ¨å–å¯¹æ•°æ—¶è¿›ä¸€æ­¥ç¨³å®šè¯¥å€¼ï¼Œå°†å°äº1çš„å€¼è®¾ç½®ä¸º1
    clipped_preds = torch.clamp(net(features), 1, float('inf'))
    rmse = torch.sqrt(loss(torch.log(clipped_preds),    # ç›¸å¯¹è¯¯å·®ç”¨å–å¯¹æ•°çš„æ–¹æ³•è®¡ç®—
                           torch.log(labels)))
    return rmse.item()
# è®­ç»ƒå‡½æ•°
def train(net, train_features, train_labels, test_features, test_labels,
          num_epochs, learning_rate, weight_decay, batch_size):
    train_ls, test_ls = [], []
    train_iter = d2l.load_array((train_features, train_labels), batch_size) # è®­ç»ƒè¿­ä»£å™¨
    optimizer = torch.optim.Adam(net.parameters(), lr=learning_rate, weight_decay=weight_decay) #ä½¿ç”¨Adamä½œä¼˜åŒ–ç®—æ³•
    for epoch in range(num_epochs):
        for X, y in train_iter:
            optimizer.zero_grad()   # å°†æ¢¯åº¦åˆå§‹åŒ–ä¸ºé›¶
            l = loss(net(X), y)
            l.backward()
            optimizer.step()
        train_ls.append(log_rmse(net, train_features, train_labels))
        if test_labels is not None:
            test_ls.append(log_rmse(net, test_features, test_labels))
    return train_ls, test_ls

# kæŠ˜äº¤å‰éªŒè¯-------------------------------------------------------------------------------
def get_k_fold_data(k, i, X, y):    # é€‰æ‹©ç¬¬iä¸ªåˆ‡ç‰‡ä½œä¸ºéªŒè¯æ•°æ®é›†
    assert k > 1
    fold_size = X.shape[0] // k     # æ•´é™¤ï¼ˆå‘ä¸‹å–æ•´ï¼‰
    X_train, y_train = None, None
    for j in range(k):
        idx = slice(j * fold_size, (j + 1) * fold_size)
        X_part, y_part = X[idx, :], y[idx]
        if j == i:
            X_valid, y_valid = X_part, y_part
        elif X_train is None:
            X_train, y_train = X_part, y_part
        else:
            X_train = torch.cat([X_train, X_part], 0)
            y_train = torch.cat([y_train, y_part], 0)
    return X_train, y_train, X_valid, y_valid
# åœ¨ğ¾æŠ˜äº¤å‰éªŒè¯ä¸­è®­ç»ƒğ¾æ¬¡åï¼Œ[è¿”å›è®­ç»ƒå’ŒéªŒè¯è¯¯å·®çš„å¹³å‡å€¼]
def k_fold(k, X_train, y_train, num_epochs, learning_rate, weight_decay, batch_size):
    train_l_sum, valid_l_sum = 0, 0
    for i in range(k):
        data = get_k_fold_data(k, i, X_train, y_train)
        net = get_net()
        train_ls, valid_ls = train(net, *data, num_epochs, learning_rate,   # å®å‚å¯¹è±¡å‰çš„*å·è¡¨ç¤ºæŠŠå®å‚å¯¹è±¡çš„å…ƒç´ å–å€¼åˆ†åˆ«ä½œä¸ºå•ç‹¬çš„å®å‚ä¼ å…¥
                                   weight_decay, batch_size)
        train_l_sum += train_ls[-1]
        valid_l_sum += valid_ls[-1]
        if i == 0:
            d2l.plot(list(range(1, num_epochs + 1)), [train_ls, valid_ls],
                     xlabel='epoch', ylabel='rmse', xlim=[1, num_epochs],
                     legend=['train', 'valid'], yscale='log')
        print(f'æŠ˜{i + 1}ï¼Œè®­ç»ƒlog rmse{float(train_ls[-1]):f}, '
              f'éªŒè¯log rmse{float(valid_ls[-1]):f}')
    return train_l_sum / k, valid_l_sum / k

# æ¨¡å‹è¶…å‚æ•°è°ƒä¼˜ï¼ˆé€‰æ‹©è¶…å‚æ•°ï¼‰-------------------------------------------------------------------
k, num_epochs, lr, weight_decay, batch_size = 5, 100, 0.1, 2000, 128
train_l, valid_l = k_fold(k, train_features, train_labels, num_epochs,
                         learning_rate=lr, weight_decay=weight_decay, batch_size=batch_size)
print(f'{k}-æŠ˜éªŒè¯: å¹³å‡è®­ç»ƒlog rmse: {float(train_l):f}, 'f'å¹³å‡éªŒè¯log rmse: {float(valid_l):f}')
d2l.plt.show()

# è®­ç»ƒå¹¶é¢„æµ‹----------------------------------------------------------------------------------
def train_and_pred(train_features, test_features, train_labels, test_data,
                   num_epochs, lr, weight_decay, batch_size):
    net = get_net()
    train_ls, test_ls = train(net, train_features, train_labels, None, None,
                              num_epochs, learning_rate=lr, weight_decay=weight_decay, batch_size=batch_size)
    d2l.plot(np.arange(1, num_epochs + 1), [train_ls], xlabel='epoch',
             ylabel='log rmse', xlim=[1, num_epochs], yscale='log')
    print(f'è®­ç»ƒlog rmseï¼š{float(train_ls[-1]):f}')
    # å°†è®­ç»ƒå¥½çš„æ¨¡å‹ç”¨æ¥ç»™æµ‹è¯•æœºé¢„æµ‹
    preds = net(test_features).detach().numpy()
    # å°†æµ‹è¯•ç»“æœæ ¼å¼åŒ–å¯¼å‡ºåˆ°Kaggle
    test_data['SalePrice'] = pd.Series(preds.reshape(1, -1)[0])
    submission = pd.concat([test_data['Id'], test_data['SalePrice']], axis=1)
    submission.to_csv('submission.csv', index=False)

